<%if current_user%>
<h2>Welcome back, <%=current_user.username.capitalize%></h2>
<%if current_user.profile_image && current_user.bio%>
    <%=image_tag current_user.profile_image%>
    <p><%=current_user.bio%></p>
<%else%>
    <p>Please update profile</p>
    <%=form_for current_user do |f|%>
        <%=f.label :profile_image%>
        <%= f.text_field :profile_image %>
        <br><br>
       <%=f.label :bio%>
        <%= f.text_area :bio%>
        <%=f.submit "Edit profile"%>
    <%end%>
<%end%>

<br>
<%=link_to "My List",constellations_path%>
<br><br>
<%=link_to "Astrophotographers", astrophotographers_path%>
<br><br>
 <%=link_to "Add a Constellaton", new_constellation_path(@constellation)%>
<%else%>
    <p>Welcome!</p>
<%end%>

