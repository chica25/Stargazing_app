
<div class="flash-error">
<%=flash[:error] if flash[:error]%>
</div>

<h1>Log In</h1>
<%=form_for :astrophotographer do |f|%>
    <%=f.label :username%>
    <%=f.text_field :username%>
    <br><br>
    <%=f.label :Password%>
    <%=f.password_field :password%>
    <br><br>
    <%=f.submit 'Login'%>
<%end%> 
  <%=button_to 'Login with Google', '/auth/google_oauth2'%>

<style>
.flash-error {
    color: red;
}
</style>