
<%=form_for @astrophotographer do |f|%>
        <%=f.label :profile_image%>
        <%=f.text_field :profile_image%>
        <br><br>
        <%=f.label :bio%>
        <%=f.text_field :bio%>
        <br><br>
    <% if current_user.id == @astrophotographer.id%>
        <%=button_to "Delete", astrophotographer_path(@astrophotographer), :method => :delete, data:{confirm: "Are you sure you want to delete your account?"}%>
    <%else%>
        <%flash[:error] = "You're not authorize to edit this page."%>
    <%end%> 
<%end%> 


