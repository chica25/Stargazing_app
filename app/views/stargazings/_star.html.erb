
<%=form_for stargazing do |f| %>
<%if @constellation%>
    <%=f.hidden_field :constellation_id, value: @constellation.id%>
<%end%>
    <%=f.label :location%>
    <%=f.text_field :location%>
    <br><br>
    <%=f.label :weather%>
    <%=f.number_field :weather%>
    <br><br>
    <%=f.label :time%>
    <%=f.time_field :time%>
    <%=f.submit%> 
<%end%>
<br>

<%=link_to 'Home', root_path%>


